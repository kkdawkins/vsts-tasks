    "category": "Build",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "demands": [],
    "preview": true,
    "version": {
        "Major": 2,
        "Minor": 0,
        "Patch": 34
